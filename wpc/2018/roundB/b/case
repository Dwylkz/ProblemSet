(1+n)*n/2=(n+(n+n/2-1))*n/4
(1+n)/2=(n+(n+n/2-1))/4
4+4n=2n+2n+n-2=5n-2
n=6



1=a
n=b-a+1
(a+b)*(b-a+1)/2=(b+(b+(b-a+1)/2-1))*(b-a+1)/4
(a+n)/2=(n+(n+n/2-1))/4
4a+4n=5n-2
4a+2=n
4a+2=b-a+1

5a+1=b
>> 1 <= 5a+1 <= n 
>> 0 <= a and a <= (n-1)/5
>> n-(5a+1)=mk 
>> a = (n-mk-1)/5
>> (n-mk-1)%5=0 && (n-mk-1)/5 > 0
>> yes

b-a+1 = 2k
5a+1-a+1 = 4a+2 = 2k
2a+1=k
>> k is odd && n/k is odd number

